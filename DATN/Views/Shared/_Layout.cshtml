<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý kho</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <!-- Main container -->
    <div class="main-container">
        <!-- Header -->
        <header class="header">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <!-- Thêm kiểu dáng cho logo để căn chỉnh đẹp hơn -->
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="display: flex; align-items: center;">
                            <!-- Logo với kích thước cố định và hiệu ứng hover -->
                            <img src="~/Content/IMAGE/warehouse_17883543.png" alt="Logo" style="width: 40px; height: 40px; margin-right: 10px; transition: transform 0.3s ease-in-out;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'" />
                            <!-- Tên website -->
                            <span>Quản lý kho</span>
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <!-- Mục 'Khai báo danh mục' với menu dropdown -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    Khai báo danh mục
                                </a>
                                <ul class="dropdown-menu">
                                    @if (Session["Role"].ToString() == "0")
                                    {
                                        <li>@Html.ActionLink("Danh mục tài khoản", "UserInfo", "UserInfo")</li>
                                    }

                                    <li>@Html.ActionLink("Danh mục khách hàng", "DMKhachHang", "DMKhachHang")</li>
                                    <li>@Html.ActionLink("Danh mục nhà cung cấp", "DMNCC", "DMNCC")</li>
                                    <li>@Html.ActionLink("Danh mục vật tư", "Dmvt", "Dmvt")</li>
                                    <li>@Html.ActionLink("Danh mục loại vật tư", "LoaiVatTu", "LoaiVatTu")</li>
                                    <li>@Html.ActionLink("Danh mục đơn vị tính", "Dmdvt", "Dmdvt")</li>
                                    <li>@Html.ActionLink("Danh mục kho", "Dmkho", "Dmkho")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    Quản lý phiếu nhập xuất
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Phiếu nhập kho", "PhieuNhap", "PhieuNhap")</li>
                                    <li>@Html.ActionLink("Phiếu xuất kho", "PhieuXuat", "PhieuXuat")</li>

                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    Báo cáo
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Báo cáo tồn kho", "BCTonKho", "BCTonKho")</li>
                                    <li>@Html.ActionLink("Bảng kê phiếu nhập kho", "BCPhieuNhap", "BCPhieuNhap")</li>
                                    <li>@Html.ActionLink("Bảng kê phiếu xuất kho", "BCPhieuXuat", "BCPhieuXuat")</li>
                                    <li>@Html.ActionLink("Cảnh báo tồn kho", "CBTonKho", "CBTonKho")</li>
                                </ul>
                            </li>

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <!-- Body Content -->
        <div class="body-content">
            @RenderBody()
            <hr />
        </div>

        <!-- Footer -->
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Quản lý kho</p>
        </footer>

    </div>
    <script src="../Scripts/angular.min.js"></script>
    <script src="~/Scripts/MyControllerJS/PhieuNhapController.js"></script>
    <script src="~/Scripts/MyControllerJS/PhieuXuatController.js"></script>
    <script src="~/Scripts/MyControllerJS/UserInfoController.js"></script>
    <script src="~/Scripts/MyControllerJS/DMKhachHangController.js"></script>
    <script src="~/Scripts/MyControllerJS/DMNCCController.js"></script>
    <script src="~/Scripts/MyControllerJS/DmvtController.js"></script>
    <script src="~/Scripts/MyControllerJS/LoaiVatTuController.js"></script>
    <script src="~/Scripts/MyControllerJS/DmdvtController.js"></script>
    <script src="~/Scripts/MyControllerJS/DmkhoController.js"></script>
    <script src="~/Scripts/MyControllerJS/BCTonKhoController.js"></script>
    <script src="~/Scripts/MyControllerJS/CBTonKhoController.js"></script>
    <script src="~/Scripts/MyControllerJS/BCPhieuNhapController.js"></script>
    <script src="~/Scripts/MyControllerJS/BCPhieuXuatController.js"></script>
    <script src="~/Scripts/MyControllerJS/DashboardController.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.20.0/select.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-sanitize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
