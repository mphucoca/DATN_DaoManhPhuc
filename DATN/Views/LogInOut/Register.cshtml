@model WH.Models.UserInfoClass
@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = null;
}

<div class="login-container">
    <div class="login-box">
        <h2>Tạo tài khoản mới</h2>
        <p class="subtitle">Điền thông tin để bắt đầu sử dụng hệ thống</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
          
            <div class="input-group">
                <i class="fas fa-user"></i>
                @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "Tên đăng nhập" })
            </div>

            <div class="input-group">
                <i class="fas fa-id-card"></i>
                @Html.TextBoxFor(model => model.fullname, new { @class = "form-control", placeholder = "Họ và tên" })
            </div>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Mật khẩu" })
            </div>

        

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <button type="submit" class="btn-login">Đăng Ký</button>
        }

        <div class="text-center mt-3">
            <span>Đã có tài khoản? </span>
            <a href="@Url.Action("Login", "LogInOut")" class="create-account-link">Đăng nhập</a>
        </div>
    </div>
</div>

<!-- FontAwesome icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- CSS -->
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #e0eafc, #cfdef3);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        width: 100%;
        max-width: 420px;
        padding: 30px;
    }

    .login-box {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .login-box h2 {
            margin-bottom: 10px;
            color: #005E9C;
            font-size: 26px;
        }

    .subtitle {
        color: #666;
        font-size: 14px;
        margin-bottom: 30px;
    }

    .input-group {
        position: relative;
        margin-bottom: 20px;
    }

        .input-group i {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #aaa;
        }

    .form-control {
        width: 100%;
        padding: 10px 12px 10px 36px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #005E9C;
            box-shadow: 0 0 6px rgba(0, 94, 156, 0.4);
        }

    .btn-login {
        background-color: #005E9C;
        color: white;
        border: none;
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s ease;
    }

        .btn-login:hover {
            background-color: #004080;
        }

    .create-account-link {
        color: #005E9C;
        font-weight: 500;
        text-decoration: none;
        transition: 0.2s ease;
    }

        .create-account-link:hover {
            text-decoration: underline;
            color: #003d66;
        }

    .text-danger {
        font-size: 14px;
        margin-top: 10px;
    }
</style>
